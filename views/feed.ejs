<%- include("partials/header.ejs") %>

<style>
  /* Add your custom styles here */
  .w-full {
    max-width: 1200px; /* Adjust as needed */
    margin: 0 auto;
  }

  .min-h-screen {
    min-height: 100vh;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
  }

  .cards {
    display: flex;
    flex-wrap: wrap;
    gap: 16px; /* Adjust as needed */
  }

  .card {
    flex: 1 0 calc(33.333% - 16px); /* Adjust width and margin */
    background-color: #ffffff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 16px; /* Adjust as needed */
  }

  .card img {
    width: 100%;
    height: 300px; /* Adjust as needed */
    object-fit: cover;
  }

  .card:nth-child(odd) img {
    height: 200px; /* Adjust as needed for smaller images on odd-indexed cards */
  }

  .card h5 {
    padding: 10px;
    font-size: 16px;
    margin: 0;
  }
</style>

<div class="w-full min-h-screen bg-black-800 px-4 py-8">
  <div class="cards">
    <% posts.forEach(function(elem, index) { %>
      <div class="card">
        <div class="overflow-hidden">
          <img src="/images/uploads/<%= elem.image %>" alt="<%= elem.title %>">
        </div>
        <h5 class="mt-2 text-sm"><%= elem.title %></h5>
      </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer.ejs") %>
