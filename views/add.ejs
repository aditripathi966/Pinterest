<%- include("partials/header.ejs")%>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 ">
    <h1 class="text-xl">Create a new post.</h1>
    <hr class="opacity-20 mt-3">
    <form  action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px=3 py=2 " type="file" name="postimage">
        <input class="block w-1/3 px=3 py=2 border-2 mt-2 rounded-md" type="text" placeholder="title" name="title">
        <textarea class="h-40 block w-1/3 px=3 py=2 border-2 mt-2 rounded-md" type="textarea" placeholder="description" name="description"></textarea>
        <input class=" block w-1/3 px=3 py=2 border-2 mt-2 rounded-md bg-red-700 text-white" type="submit" value="create post">

    </form>
</div>
<%- include("partials/footer.ejs")%>